<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#85C1E9"
    tools:context="com.clarkson.clarksworld.andelacryptocoin.CoinSplashActivity">

    <ImageView
        android:id="@+id/andela_logo"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/andelaimage"
        android:layout_marginTop="220dp"/>

    <ImageView
        android:id="@+id/coin_logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/cryptocompare"
        android:layout_marginTop="30dp"/>

</LinearLayout>
